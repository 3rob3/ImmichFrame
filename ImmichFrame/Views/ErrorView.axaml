<UserControl x:Class="ImmichFrame.Views.ErrorView"
			 xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="900"
			 xmlns:vm="using:ImmichFrame.ViewModels"
             x:DataType="vm:ErrorViewModel">
	<Design.DataContext>
		<vm:ErrorViewModel />
	</Design.DataContext>
	<DockPanel>
		<Grid DockPanel.Dock="Bottom">
			<Button
				Content="Quit"
				HorizontalAlignment="Stretch"
				Command="{Binding QuitCommand}"
				HorizontalContentAlignment="Center"/>
		</Grid>
		<Grid ColumnDefinitions="*,Auto,*" RowDefinitions="*,Auto,*">
			<Border Grid.Column="1" Grid.Row="1" Margin="50" Padding="10" Background="Teal" CornerRadius="10">
				<StackPanel>
					<Label HorizontalAlignment="Center" Content="An error occured"></Label>
					<TextBlock Margin="20" Text="{Binding Ex.Message}"></TextBlock>
					<Expander Header="Show more information" Content="{Binding Ex}"></Expander>
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Spacing="5">
						<Button
							Content="Copy to clipboard"
							Command="{Binding CopyCommand}"/>
						<Button
							Content="Open Log"
							IsVisible="{Binding LogVisible}"
							Command="{Binding LogCommand}"/>
						<Button
							Content="Settings"
							IsVisible="{Binding SettingsVisible}"
							Command="{Binding SettingsCommand}"/>
						<Button
							Content="Continue"
							Command="{Binding ContinueCommand}"/>
					</StackPanel>
				</StackPanel>
			</Border>
		</Grid>
	</DockPanel>
</UserControl>
